            </div>
            <div class="form-group">
              
                <select asp-items=@ViewBag.local2 nome="nomelocal" asp-for="idlocal" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class ="btn btn-sucess">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
