@model SysPatrimonioo.Models.DbDepartamento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Departamento</h4>

<div class = "form-group"> 


</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomedepartamento" class="control-label"></label>
                <input asp-for="nomedepartamento" class="form-control" />
